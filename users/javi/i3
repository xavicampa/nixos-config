# Adjust mouse scrolling and speed
exec_always --no-startup-id xinput set-prop pointer:"Logitech G Pro " "libinput Natural Scrolling Enabled" 1
exec_always --no-startup-id xinput set-prop pointer:"Logitech G Pro " "libinput Accel Profile Enabled" 0, 0
exec_always --no-startup-id xinput set-prop pointer:"Logitech G Pro " "libinput Accel Speed" -0.5
exec_always --no-startup-id xinput set-prop 15 "libinput Natural Scrolling Enabled" 1
exec_always --no-startup-id xinput set-prop 15 "libinput Accel Profile Enabled" 0, 0
exec_always --no-startup-id xinput set-prop 15 "libinput Accel Speed" -0.5

